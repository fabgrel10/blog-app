 <%= form_with model: Comment.new, url: user_post_comments_path(post_id: post_id, user_id: user_id), class: 'p-5 bg-white border shadow-lg border-sky-500' do |f| %>
  <div class="mb-6">
    <%= f.text_area :text, rows: 5, placeholder: 'Say something nice... ', class: 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg form-control bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>
  <div class="flex justify-center">
    <%= f.submit 'Add a New Comment', class: 'p-2 font-bold text-center text-gray-900 bg-white border rounded focus:outline-none border-sky-500 hover:bg-sky-500 hover:text-white' %>
  </div>
<% end %>
