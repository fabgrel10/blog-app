<%= render 'partials/user', user: @user %>
<div class="p-3 mb-3 bg-white border border-sky-500">
  <h2 class="mb-2 text-2xl font-bold">Bio</h2>
  <p class="text-justify text-gray-700">
    <%= user_bio(@user)%>
  </p>
</div>
<%= render partial: 'partials/post', collection:  @user.recent_posts,  as: :post  %>
<div class="flex justify-center">
  <button class="p-2 font-bold text-center text-gray-900 bg-white border rounded focus:outline-none border-sky-500">
    <%= link_to "See all posts", user_posts_path(@user) %>
  </button>
</div>
